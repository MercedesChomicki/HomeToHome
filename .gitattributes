# Archivos de código fuente Java
*.java text eol=lf

# Archivos de configuración YAML
*.yml text eol=lf

# Archivos de configuración XML
*.xml text eol=lf

# Scripts de shell (Linux/macOS) - necesarios para Docker
*.sh text eol=lf

# Archivos de propiedades
*.properties text eol=lf

# Archivos de batch/Windows
*.cmd text eol=crlf

# Archivos de Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Archivos Docker
Dockerfile text eol=lf

# Archivos de Maven Wrapper
mvnw text eol=lf
mvnw.cmd text eol=crlf
.mvn/wrapper/maven-wrapper.properties text eol=lf